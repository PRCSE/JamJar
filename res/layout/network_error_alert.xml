<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/network_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:text="Unable to establish a connection"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/network_error_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/network_error_text"
        android:layout_alignRight="@+id/network_error_text"
        android:layout_below="@+id/network_error_text"
        android:text="This application requires an internet connection. Please check your end and we'll check ours. Together we can solve this." />

</RelativeLayout>